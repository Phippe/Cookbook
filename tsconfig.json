{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "dom"
        ],
        "skipLibCheck": true,
    },
    "exclude": [
        "node_modules",
        "cookbook/.vitepress"
    ]
}